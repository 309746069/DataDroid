<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.foxykeep.datadroidpoc"
	android:versionCode="1"
	android:versionName="1.0">

	<uses-sdk
		android:minSdkVersion="4" />

	<uses-permission
		android:name="android.permission.INTERNET" />

	<application
		android:icon="@drawable/icon"
		android:label="@string/app_name"
		android:name=".DataDroidApplication"
		android:theme="@style/Theme.DataDroid">
		<activity
			android:name=".ui.HomeActivity"
			android:label="@string/app_name">
			<intent-filter>
				<action
					android:name="android.intent.action.MAIN" />
				<category
					android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:name=".ui.PersonListActivity" />
		<activity
			android:name=".ui.CityListActivity" />
		<activity
			android:name=".ui.CrudPhoneListActivity" />

		<service
			android:name=".data.service.PoCService"
			android:exported="false" />

		<provider
			android:name=".data.provider.PoCProvider"
			android:authorities="com.foxykeep.datadroidpoc.data.provider.PoCProvider"
			android:exported="false" />
	</application>
</manifest>